{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],
    "emitDecoratorMetadata": true,
    "paths": {
      "@swagger": ["./src/config/swagger"],
      "@config": ["./src/config"],
      "@environment": ["./src/config/environments"],
      "@helpers": ["./src/helpers"],
      "@server": ["./src/server.ts"],
      "@middlewares": ["./src/middlewares"]
    }
  },
  "include": ["./src"]
}
